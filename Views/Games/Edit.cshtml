@model GameFinder.Models.Game
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Edit Game</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Title: <input asp-for="Title" class="form-control" /></p>
    <p>Genre:
        <select asp-for="GenreId" class="form-control" asp-items="@(new SelectList(ViewBag.Genres, "Id", "Name"))">
            <option value="">--Select Genre--</option>
        </select>
    </p>
    <p>Platform:
        <select asp-for="PlatformId" class="form-control" asp-items="@(new SelectList(ViewBag.Platforms, "Id", "Name"))">
            <option value="">--Select Platform--</option>
        </select>
    </p>
    <p>Rating:
        <select asp-for="Rating" class="form-control">
            <option value="">--Select Rating--</option>
            @for (int i = 1; i <= 10; i++) {
                <option value="@i">@i</option>
            }
        </select>
    </p>
    <button type="submit">Save</button>
</form>
<p><a href="/Games">Back to List</a></p>