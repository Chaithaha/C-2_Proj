@model GameFinder.Models.Game

<h2>Edit Game</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Title: <input asp-for="Title" /></p>
    <p>Genre: <input asp-for="Genre" /></p>
    <p>Platform: <input asp-for="Platform" /></p>
    <p>Rating: <input asp-for="Rating" /></p>
    <button type="submit">Save</button>
</form>
<p><a href="/Games">Back to List</a></p>