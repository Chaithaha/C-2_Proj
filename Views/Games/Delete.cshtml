@model GameFinder.Models.Game

<h2>Delete Game</h2>
<p>Are you sure you want to delete this game?</p>
<p>Title: @Model.Title</p>
<p>Genre: @Model.Genre.Name</p>
<p>Platform: @Model.Platform.Name</p>
<p>Rating: @Model.Rating</p>

<form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure?');">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
</form>
<p><a href="/Games">Back to List</a></p>