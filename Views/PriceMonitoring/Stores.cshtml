@model IEnumerable<CreativeColab.Models.Store>
@{
    ViewData["Title"] = "Game Stores";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">üè™ Game Stores</h1>
        <a asp-controller="PriceMonitoring" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="row">
        @foreach (var store in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@store.Name</h5>
                        @if (!string.IsNullOrEmpty(store.Website))
                        {
                            <p class="card-text">
                                <a href="@store.Website" target="_blank" class="text-decoration-none">
                                    <i class="fas fa-external-link-alt"></i> Visit Store
                                </a>
                            </p>
                        }
                        <p class="card-text">
                            <small class="text-muted">
                                @(store.GamePrices?.Count ?? 0) price entries tracked
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-store fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">No stores available</h4>
            <p class="text-muted">Stores will be automatically added when you start tracking prices.</p>
        </div>
    }
</div> 