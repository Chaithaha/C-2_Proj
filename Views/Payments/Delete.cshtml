@model CreativeColab.Models.Payment
@{
    ViewData["Title"] = "Delete Payment";
}
<h2>Delete Payment</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>
        <dt class="col-sm-2">Payment Method</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="PaymentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>