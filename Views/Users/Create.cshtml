@model CreativeColab.Models.User
@{
    ViewData["Title"] = "Create User";
}
<h2>Create User</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create" method="post" id="createUserForm">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Enter username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter email address" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Enter password" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
        <input asp-for="Role" class="form-control" placeholder="e.g., user, designer, admin" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#createUserForm').on('submit', function(e) {
                console.log('Form submitted');
                console.log('Form data:', $(this).serialize());
                alert('Form is being submitted!');
                // Prevent default to see if the form is actually being submitted
                // e.preventDefault();
            });

            // Also test button click
            $('button[type="submit"]').on('click', function(e) {
                console.log('Submit button clicked');
                alert('Submit button clicked!');
            });
        });
    </script>
}