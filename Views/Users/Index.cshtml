@model IEnumerable<GameFinder.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h2>All Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">View Collection</a>
                </td>
            </tr>
        }
    </tbody>
</table> 