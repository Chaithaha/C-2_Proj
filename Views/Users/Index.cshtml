@model CreativeColab.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Users";
}
<h2>Users</h2>
<p>
    <a asp-action="Create">Add New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Projects</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null)
        {
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.Role</td>
                    <td>@(item.OwnedProjects?.Count ?? 0) projects</td>
                    <td>@item.CreatedAt.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                        <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>